	location /geoserver/ {
            proxy_pass http://localhost:8081/geoserver/;
            proxy_set_header Host $host;
    	    proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
	    
	    sub_filter 'http://localhost:8081/geoserver/' 'https://meteohub-maps.hpc.cineca.it/geoserver/';
            sub_filter_once off;
            proxy_buffering off;
            # proxy_set_header Origin "";
            proxy_redirect http://localhost:8081/geoserver/ /geoserver/;
            add_header Referrer-Policy "no-referrer-when-downgrade" always;

            # CORS headers
            add_header 'Access-Control-Allow-Origin' 'https://meteohub-maps.hpc.cineca.it';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';

            # Handle preflight requests
            if ($request_method = 'OPTIONS') {
                return 204;
            }
        }

        location /wms {
            proxy_pass http://localhost:8081/geoserver/meteohub/wms;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }


